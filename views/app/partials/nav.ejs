<!DOCTYPE html>
<html>

<head>


    <link rel="stylesheet" href="/stylesheets/nav_css.css">







    <script type="text/javascript" src="/libs/jquery/dist/jquery.js"></script>
    <script type="text/javascript" src="/libs/jquery/dist/jquery.scrolly.min.js"></script>
    <script type="text/javascript" src="/libs/jquery/dist/jquery.min.js"></script>

    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>

    <link href="/libs/bootstrap/dist/css/bootstrap.min.css" type="text/css" rel="stylesheet" media="screen">
    <link href="/libs/bootstrap/dist/css/bootstrap-theme.min.css" type="text/css" rel="stylesheet" media="screen">



    <script src="/libs/jquery/dist/jquery.js"></script>
    <link href="/libs/bootstrap/dist/css/bootstrap.min.css" type="text/css" rel="stylesheet" media="screen">
    <link href="/libs/bootstrap/dist/css/bootstrap-theme.min.css" type="text/css" rel="stylesheet" media="screen">


    <script src="/libs/bootstrap/dist/js/bootstrap.js"></script>




<script>
    $(window).scroll(function() {
if ($(this).scrollTop() > 1){
    $('#topNav').addClass("sticky");
  }
  else{
    $('#topNav').removeClass("sticky");
  }
});

</script>
    <meta charset="utf-8">
</head>

<body>




    <nav class="navbar navbar-default" id="topNav">
        <div class="container">
            <div class="navbar-header" >
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
  					<span class="icon-bar"></span> <span class="icon-bar"></span> <span
  						class="icon-bar"></span>
  				</button>
                <a class="navbar-brand" href="/" id="homeBtn">HOME</a>

            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav navbar-right">

                    <%if(user){%>
                        <%if(user.email==="admin"){%>
                            <li class="navBar"><a href="/posts/">OUR PAGE</a></li>
                            <%}%>
                            <li class="navBar"><a href="/visualization/">VISUALIZATION</a></li>
                                <li class="navBar"><a href="/boards">BOARDS</a></li>

                                <ul class="nav navbar-nav navbar-right">
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle navBar" data-toggle="dropdown">Welcome, User <span class="caret"></span></a>
                                        <ul id="login-dp" class="dropdown-menu">
                                            <li>
                                                <div class="row">
                                                    <div class="col-md-12">

                                                        <li><a href="/boards/<%= user._id %>/mypage"><i class="icon-cog"></i> 마이 페이지 </a></li>
                                                        <li><a href="/users/<%=user._id%>/edit"><i class="icon-cog"></i> 회원정보 수정</a></li>

                                                        <li class="divider"></li>
                                                        <li><a href="/logout"><i class="icon-off"></i> 로그아웃 </a></li>


                                                    </div>
                                                </div>
                                            </li>
                                        </ul>
                                    </li>
                                </ul>
                                <%}else{%>
                                    <!-- <li><a href="/users/new">회원가입</a></li>
                <li><a href="/login">로그인 </a></li> -->




                                    <ul class="nav navbar-nav navbar-right">
                                        <li class="dropdown">
                                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><b>Login</b> <span class="caret"></span></a>
                                            <ul id="login-dp" class="dropdown-menu">
                                                <li>
                                                    <div class="row">
                                                        <div class="col-md-12">
                                                            <form class="form" role="form" method="post" action="/login" accept-charset="UTF-8" id="login-nav">
                                                                <div class="form-group">
                                                                    <label class="sr-only" for="exampleInputEmail2">Email address</label>
                                                                    <input type="text" class="form-control" id="exampleInputEmail2" placeholder="Email address" required name="email">
                                                                    <!-- 타입 email로 바꿀것 -->
                                                                </div>
                                                                <div class="form-group">
                                                                    <label class="sr-only" for="exampleInputPassword2">Password</label>
                                                                    <input type="password" class="form-control" id="exampleInputPassword2" placeholder="Password" required name="password">
                                                                    <!-- <div class="help-block text-right"><a href="">Forget the password ?</a></div> -->
                                                                </div>
                                                                <div class="form-group">
                                                                    <button id="signinButton" type="submit" class="btn btn-primary btn-block">Sign in</button>
                                                                </div>

                                                                <div class="checkbox">

                                                                </div>
                                                            </form>
                                                        </div>


                                                        <% loginError.forEach(function(e){ %>

                                                            <p class="error_message" id="error"><%= e %><p>

                                                        <% }) %>

                                                        <div class="bottom text-center">
                                                            New here ? <a href="/users/new"><b>Join Us</b></a>
                                                        </div>
                                                    </div>
                                                </li>
                                            </ul>
                                        </li>
                                    </ul>

                                    <%}%>

                </ul>
            </div>
        </div>
    </nav>

</body>

</html>
